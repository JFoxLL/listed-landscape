<!-- SEO details -->
<% content_for :title do %>
  Dividend Yields of Australian LICs
<% end %>

<% content_for :description do %>
  [<%= Time.now.strftime("%b %Y") %> Updated!] Current & Historical Dividend Yields of Australian Listed Investment Companies (LICs) | Listed Landscape.
<% end %>

<% content_for :keywords do %>
  Listed Investment Companies, LICs, Dividends, Dividend Yields, Listed Landscape
<% end %>


<!-- Page Header -->
<div class="dividend-yield-index-page-header">
    <h1>Dividend Yields</h1>
</div>
<div class="dividend-yields-index-page-details">
    <p>Historical Dividend Yields for the 30 largest LICs on the ASX.</p>
    <p>Click the Name to view more information on this metric.
</div>



<!-- Dividend Yields Index Table Filter -->
<%= form_tag dividend_yields_path, method: :get, class: "lics-index-table-investment-focus-filter", data: { turbo_frame: "dividend_yields_index_table" } do %>
  <%= hidden_field_tag :sort_by, params[:sort_by] %>
  <%= hidden_field_tag :sort_order, params[:sort_order] %>
  <%= select_tag :investment_focus, options_for_select(@investment_focus_options, params[:investment_focus]), prompt: 'All' %>
  <%= submit_tag 'Filter', name: nil %>
<% end %>


<!-- Dividend Yields Index table -->
<%= turbo_frame_tag 'dividend_yields_index_table' do %>
  <%= render partial: 'dividend_yields/dividend_yields_index_table', locals: { lics: @lics } %>
<% end %>

<!-- Notes below Dividend Yields Index Table -->
<div class="dividend-yields-index-page-details">
    <p>* The start-of-year share price is used when calculating yield.</p>
    <p>* Net Dividend Yield: doesn't include franking credits.</p>
    <p>* Gross Dividend Yield: does include franking credits.</p>
    <p>* Some LICs end their financial year at the end of the calendar year. This is why the most recent year may still be blank.</p>
    <p><br></p>
</div>